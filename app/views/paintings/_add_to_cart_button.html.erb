<% unless (@order_items.map { |item| item.painting }).include? @painting %>
  <%= form_for @order_item, data: { reflex: "submit->Cart#add" } do |f|%>
    <%= f.hidden_field :painting_id, value: @painting.id %>
    <%= f.hidden_field :quantity, value: 1 %>
    <%= f.submit "Add To Cart",
        :class => "cursor-pointer mt-10 mx-auto min-h-10 w-3/4
                   bg-black text-white border-2 border-black
                   flex justify-center items-center py-4"

    %>
  <% end %>
  <% else %>
    <a data-controller="navbar" data-action="navbar#openCart"
              class="cursor-pointer mt-10 mx-auto min-h-10 w-3/4
              bg-black text-white border-2 border-black
              flex justify-center items-center py-4">
      Item is in cart
    </a>
<% end %>
