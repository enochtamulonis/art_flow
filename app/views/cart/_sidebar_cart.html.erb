<div class="sidebar bg-gray-300" id="sidebar" data-controller="sidebar" data-sidebar-target="sidebar">
  <div class="w-full min-h-10 flex justify-start px-4 pt-4">
    <a data-action="sidebar#closeCart"><i class="fa fa-times text-2xl cursor-pointer"></i></a>
  </div>
  <h2 class="text-3xl text-center"> Your Cart </h2>
  <% if @order_items %>
    <div order_items>
      <%= render 'cart/sidebar_items', :order_items => @order_items %>
    </div>
  <% end %>
</div>
