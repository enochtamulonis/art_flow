<% order_items.each do |order_item| %>
  <div class="flex w-full items-center justify-between min-h-10 py-6 bg-gray-300 px-4" data-sidebar-target="orderItem">
    <div class="flex items-center">
      <%= link_to order_item.painting do %>
        <%= image_tag order_item.painting.images[0].variant(resize_to_fill: [50, 50, { gravity: 'Center' }]) %>
      <% end %>
      <%= link_to order_item.painting do %>
        <h2 class="text-xl pl-2 text-gray-900"><%= order_item.painting.name %></h2>
      <% end %>
    </div>
    <button class="cursor-pointer text-2xl px-2"
            data-reflex="click->Cart#remove"
            data-id="<%= order_item.id %>"
    >x</button>
  </div>
<% end %>
