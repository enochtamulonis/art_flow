<div class="admin-tile bg-green-200 mb-10 overflow-hidden rounded">
  <div class="min-h-10 flex justify-end absolute">
    <%= link_to "Edit", edit_painting_path(painting), :class => "px-8 py-1 bg-yellow-300 border-2 border-yellow-300 hover:bg-transparent hover:text-white text-2xl transition-all duration-300"%>
  </div>
  <% if painting.images.attached? %>
    <%= image_tag(painting.thumbnail(0)) %>
  <% end %>
  <div class="flex flex-col items-center justify-between w-full pt-4">
    <%= link_to painting do %>
      <h3 class="text-xl"><%= painting.name %></h3>
    <% end %>
    <br><br> <br>
    <div class="w-full h-full flex justify-end mt-10 pt-10 pr-2">
      <h4 class="text-lg">size: <%= painting.size %> </h4>
      <h4 class="text-lg ml-4">price: <%= number_to_currency painting.price %> </h4>
    </div>
  </div>
</div>
