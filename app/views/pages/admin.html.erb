<div class="h-full site-size flex-grow border-2 border-blue-200 rounded-sm">
  <div class="h-10 py-10 w-full flex items-center justify-between px-2 bg-blue-200">
    <h1 class="text-2xl"> Admin Page </h1>
    <%= link_to "Create Listing", new_painting_path, :class => "px-4 py-1 text-xl hover:text-gray-700 transition-all duration-300" %>
  </div>
  <div class="w-full h-full flex flex-col items-center" data-controller="admin-form">
    <div class="min-h-10 py-4 w-full">
      <%= form_for @site_detail, url: new_site_details_path do |f| %>
        <div class="flex flex-col">
          <h3 class="text-lg w-4/5 mx-auto mb-2 text-center"> Contact Page Info </h3>
          <%= f.label :email, :class => "w-4/5 mx-auto py-1 text-gray-900" %>
          <%= f.text_field :contact_info_email, :class => "w-4/5 pl-1 mx-auto", placeholder: "example@example.com" %>
          <%= f.label :phone, :class => "w-4/5 mx-auto py-1 text-gray-800" %>
          <%= f.text_field :contact_info_phone, :class => "w-4/5 pl-1 mx-auto", placeholder: "123-456-7543" %>
          <%= f.label :other, :class => "w-4/5 mx-auto py-1 text-gray-700" %>
          <%= f.text_field :contact_info_other, :class => "w-4/5 pl-1 mx-auto", placeholder: "instagram: @example_account" %>
          <div class="w-4/5 h-full mx-auto mt-4">
            <div class="w-full text-center mb-4">
            <%= f.label :about_page_content, :class => "text-lg text-gray-900" %>
            </div>
            <%= f.rich_text_area :content, :class => "w-full h-full bg-gray-200" %>
            <%= f.submit "Update Details", :class => "w-1/2 md:w-1/4 mt-4 cursor-pointer bg-transparent text-gray-800 border-2 border-gray-800 p-2" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="w-full flex flex-col items-center">
      <h3 class="text-3xl my-10 text-gray-800">All Listings</h3>
      <div class="w-full h-full flex justify-around flex-wrap">
        <% @paintings.each do |painting| %>
          <%= render 'admin_painting_tile', :painting => painting %>
        <% end %>
      </div>
    </div>
  </div>
</div>
