<div class="h-full site-size flex-grow bg-blue-200">
  <div class="h-10 py-10 w-full flex items-center justify-between px-2">
    <h1 class="text-2xl"> Admin Page </h1>
    <%= link_to "Create Listing", new_painting_path, :class => "px-4 py-1 text-xl hover:text-gray-700 transition-all duration-300" %>
  </div>
  <div class="w-full h-full bg-gray-300 flex flex-col items-center" data-controller="admin-form">
    <div class="min-h-10 py-4 w-full bg-gray-700">
      <h2 class="text-center text-xl text-white"> Site Details </h2>
      <%= form_for @site_detail, url: new_site_details_path do |f| %>
        <div class="flex flex-col">
          <%= f.label :email, :class => "w-4/5 mx-auto py-1 text-gray-200" %>
          <%= f.text_field :contact_info_email, :class => "w-4/5 pl-1 mx-auto", placeholder: "example@example.com" %>
          <%= f.label :phone, :class => "w-4/5 mx-auto py-1 text-gray-200" %>
          <%= f.text_field :contact_info_phone, :class => "w-4/5 pl-1 mx-auto", placeholder: "123-456-7543" %>
          <%= f.label :other, :class => "w-4/5 mx-auto py-1 text-gray-200" %>
          <%= f.text_field :contact_info_other, :class => "w-4/5 pl-1 mx-auto", placeholder: "instagram: @example_account" %>
          <div class="w-4/5 h-full mx-auto mt-8">
            <%= f.label :about_page_content, :class => "py-1 text-gray-200" %>
            <%= f.rich_text_area :content, :class => "w-full h-full bg-gray-200" %>
            <%= f.submit "Update Details", :class => "w-1/4 mt-4 cursor-pointer bg-transparent text-white border-2 p-2" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="w-full flex flex-col items-center bg-gray-700">
      <h3 class="text-3xl my-10 text-gray-300">All Listings</h3>
      <div class="w-full h-full flex justify-around flex-wrap">
        <% @paintings.each do |painting| %>
          <%= render 'admin_painting_tile', :painting => painting %>
        <% end %>
      </div>
    </div>
  </div>
</div>
